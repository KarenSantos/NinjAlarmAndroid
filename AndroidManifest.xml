<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ninjaalarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ninjaalarm.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ninjaalarm.MyAlarmsActivity"
            android:label="@string/my_alarms" >
        </activity>
        <activity
            android:name="com.example.ninjaalarm.TrainingActivity"
            android:label="@string/training" >
        </activity>
        <activity
            android:name="com.example.ninjaalarm.RankingActivity"
            android:label="@string/ranking" >
        </activity>
        <activity
            android:name="com.example.ninjaalarm.NewAlarmActivity"
            android:label="@string/new_alarm" >
        </activity>
    </application>

</manifest>
